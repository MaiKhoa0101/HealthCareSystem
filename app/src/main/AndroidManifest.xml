<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Cấp quyền truy cập Album ảnh -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Cấp quyền truy cập Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HealthCareSystem"
        tools:targetApi="31">
        <activity
            android:name=".Admin.pages.AdminActivity"
            android:exported="false"
            android:label="@string/title_activity_admin"
            android:theme="@style/Theme.HealthCareSystem" />
        <activity
            android:name=".User.profile.ProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.HealthCareSystem" />
        <activity
            android:name=".Admin.AdminUser"
            android:exported="true"
            android:label="@string/title_activity_admin_user"
            android:theme="@style/Theme.HealthCareSystem">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".User.home.HomeActivity"
            android:exported="true"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.HealthCareSystem" />
        <activity
            android:name=".User.SignUpSuccess"
            android:exported="false" />
        <activity
            android:name=".User.StartScreen"
            android:exported="true" />
        <activity
            android:name=".User.Intro3"
            android:exported="false" />
        <activity
            android:name=".User.Intro2"
            android:exported="false" />
        <activity
            android:name=".User.Intro1"
            android:exported="true"
            android:theme="@style/Theme.HealthCareSystem" />
        <activity
            android:name=".User.SignIn"
            android:exported="true" />
        <activity
            android:name=".User.MainPage"
            android:exported="true" />
        <activity
            android:name=".User.SignUp"
            android:exported="true" />
    </application>

</manifest>