<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sub_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <!-- Nút quay lại -->
        <ImageButton
            android:id="@+id/returnButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/arrow_back"
            android:contentDescription="Quay lại"
            android:layout_gravity="start" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/signuptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- Tên đăng ký -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/baseline_person_24"
                android:contentDescription="User Icon"
                android:layout_marginEnd="12dp"/>

            <EditText
                android:id="@+id/username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Tên đăng ký"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Số điện thoại -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/baseline_contact_phone_24"
                android:contentDescription="Phone Icon"
                android:layout_marginEnd="12dp"/>

            <EditText
                android:id="@+id/phonenumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Số điện thoại"
                android:inputType="phone"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Mật khẩu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/lock_icon"
                android:contentDescription="Lock Icon"
                android:layout_marginEnd="12dp"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:paddingVertical="13dp"
                android:paddingStart="5dp"/>

            <ImageView
                android:id="@+id/password_eye"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_remove_red_eye_24"
                android:contentDescription="Ẩn/Hiện mật khẩu"
                android:padding="4dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Nhập lại mật khẩu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/lock_icon"
                android:contentDescription="Lock Icon"
                android:layout_marginEnd="12dp"/>

            <EditText
                android:id="@+id/repassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nhập lại mật khẩu"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:paddingVertical="13dp"
                android:paddingStart="5dp"/>

            <ImageView
                android:id="@+id/repassword_eye"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_remove_red_eye_24"
                android:contentDescription="Ẩn/Hiện mật khẩu"
                android:padding="4dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Nút tiếp tục -->
        <Button
            android:id="@+id/signupbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TIẾP TỤC"
            android:backgroundTint="@color/bluetheme"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:paddingVertical="12dp"/>

        <!-- Đăng nhập -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/signininvite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã có tài khoản?" />

            <TextView
                android:id="@+id/signinlink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Đăng nhập tại đây"
                android:textColor="#06bb00"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
