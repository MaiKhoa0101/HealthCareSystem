<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <!-- Nút quay lại -->
        <ImageButton
            android:id="@+id/returnButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/arrow_back"
            android:contentDescription="Quay lại"
            android:layout_gravity="start" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/signintitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:indeterminateTint="@color/bluetheme" />

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/baseline_email_24"
                android:contentDescription="Email Icon"
                android:layout_marginEnd="12dp"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Mật khẩu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:gravity="center_vertical">

            <!-- Icon khóa -->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/lock_icon"
                android:contentDescription="Lock Icon"
                android:layout_marginEnd="12dp"/>

            <!-- Trường nhập mật khẩu -->
            <EditText
                android:id="@+id/pass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:paddingVertical="13dp"
                android:paddingStart="5dp"/>

            <!-- Nút ẩn/hiện mật khẩu -->
            <ImageView
                android:id="@+id/togglePasswordVisibility"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_remove_red_eye_24"
                android:contentDescription="Ẩn/Hiện mật khẩu"
                android:padding="4dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Quên mật khẩu -->
        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            android:text="Quên mật khẩu?"
            android:textColor="@color/bluetheme"
            android:textSize="14sp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Nút đăng nhập -->
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ĐĂNG NHẬP"
            android:backgroundTint="@color/bluetheme"

            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:paddingVertical="12dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/google_button_border"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/googleSignInButton">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/google_logo"
                android:contentDescription="Google logo"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiếp tục với Google"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal"
                android:gravity="center"/>
        </LinearLayout>


        <!-- Đăng ký -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/signupinvite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa có tài khoản?" />

            <TextView
                android:id="@+id/signuplink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Đăng ký tại đây"
                android:textColor="#06bb00"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
