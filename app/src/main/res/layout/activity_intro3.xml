<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/intro3"
    android:background="@drawable/background_gopark"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LÀ 1 PHẦM MỀM HỔ TRỢ\nVIÊC GỬI XE TIỆN LỢI"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hỗ trợ các bác tài đỗ xe nhanh nhất"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/gifImageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/gifforcar"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="TRỞ LẠI"
            android:layout_margin="20dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:text="TIẾP TỤC"
            android:backgroundTint="@color/blueblack"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
