<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reset_password_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gopark"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <!-- Nút quay lại -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/arrow_back"
            android:contentDescription="Quay lại"
            android:layout_gravity="start" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/resetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt lại mật khẩu"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Mô tả -->
        <TextView
            android:id="@+id/resetDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập mật khẩu mới của bạn bên dưới"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:gravity="center" />

        <!-- Mật khẩu mới -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:gravity="center_vertical">

            <!-- Icon khóa -->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/lock_icon"
                android:contentDescription="Lock Icon"
                android:layout_marginEnd="12dp"/>

            <!-- Trường nhập mật khẩu -->
            <EditText
                android:id="@+id/newPasswordInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Mật khẩu mới"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:paddingVertical="13dp"
                android:paddingStart="5dp"/>

            <!-- Nút ẩn/hiện mật khẩu -->
            <ImageView
                android:id="@+id/togglePasswordVisibility"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_remove_red_eye_24"
                android:contentDescription="Ẩn/Hiện mật khẩu"
                android:padding="4dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Nhập lại mật khẩu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:gravity="center_vertical">

            <!-- Icon khóa -->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/lock_icon"
                android:contentDescription="Lock Icon"
                android:layout_marginEnd="12dp"/>

            <!-- Trường nhập mật khẩu -->
            <EditText
                android:id="@+id/confirmPasswordInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Xác nhận mật khẩu"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:paddingVertical="13dp"
                android:paddingStart="5dp"/>

            <!-- Nút ẩn/hiện mật khẩu -->
            <ImageView
                android:id="@+id/toggleRePasswordVisibility"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_remove_red_eye_24"
                android:contentDescription="Ẩn/Hiện mật khẩu"
                android:padding="4dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Nút xác nhận -->
        <Button
            android:id="@+id/resetPasswordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="ĐẶT LẠI MẬT KHẨU"
            android:backgroundTint="@color/blueblack"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingVertical="12dp" />

    </LinearLayout>
</ScrollView>
